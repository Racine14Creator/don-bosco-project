<%- include('./includes/header') %>

<div class="container-fluid">
  <div class="container py-5">
    <a href="/register" class="btn shadow btn-sm btn-danger"
      >Enregistre l'enfant</a
    >
    <div class="row bg-light my-5 shadow" style="border-radius: 1rem">
      <div class="col-md-12 p-3">
        <form method="post">
          <div
            class="form-inline"
            style="float: right; gap: 10px; margin-bottom: 20px"
          >
            <input
              readonly
              type="search"
              placeholder="Recherche"
              name="search"
              class="form-control"
            />
            <button disabled type="submit" class="btn btn-danger">
              <i class="fa fa-search"></i> Recherche
            </button>
          </div>
        </form>
        <div class="table-resposive my-2">
          <table class="table table-striped table-hover table-sm">
            <thead>
              <tr style="font-size: 14px">
                <th>nom d'utilisateur</th>
                <th>nom complet</th>
                <th>Email address</th>
                <!-- <th>Address</th> -->
                <!-- <th>Sexe</th> -->
                <!-- <th>Status</th> -->
                <th>Post</th>
                <th></th>
              </tr>
            </thead>
            <tbody style="font-size: 14px">
              <% results.forEach( (result) => { %>
              <tr>
                <td><%= result.username %></td>
                <td><%= result.fullname %></td>
                <td><%= result.email %></td>
                <td><%= result.post %></td>
                <td>
                  <div class="btn-group delete">
                    <a href="/edit/<%= result.id %>" class="btn btn-sm btn-info"
                      ><i class="fa fa-edit"></i
                    ></a>
                    <a
                      href="/delete/<%= result.id %>"
                      class="btn btn-sm btn-danger"
                      ><i class="fa fa-trash"></i
                    ></a>
                  </div>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./includes/footer') %>

<%- include('./includes/header') %>

<div class="container-fluid bg-warning">
  <div class="container py-5">
    <a href="/personnelle" class="btn shadow btn-sm btn-danger"
      >Enregistre l'enfant</a
    >
    <div class="row bg-light my-5">
      <div class="col-md-12">
        <%- include('./includes/message') %> <% result.forEach(function(user) {
        %>
        <h3 class="text-center text-white text-shadow mt-2 bg-danger">
          <%= user.fullname %>
        </h3>
        <form action="/update" method="post">
          <input
            type="hidden"
            name="id"
            value="<%= user.id %>"
            class="form-control"
          />
          <div class="form-row">
            <div class="form-group col-md-6 col-sm-12">
              <label for="username">Nom d'utilisateur</label>
              <input
                type="text"
                name="username"
                id="username"
                placeholder="Nom d'utilisateur"
                value="<%= user.username %>"
                class="form-control shadow"
              />
            </div>
            <div class="form-group col-md-6 col-sm-12">
              <label for="fullname">Nom complet</label>
              <input
                type="text"
                name="fullname"
                id="fullname"
                placeholder="Nom complet"
                value="<%= user.fullname %>"
                class="form-control shadow"
              />
            </div>
            <div class="form-group col-md-7 col-sm-12">
              <label for="fullname">Nom complet</label>
              <input
                type="email"
                name="email"
                id="email"
                placeholder="example@goma.cd"
                value="<%= user.email %>"
                class="form-control shadow"
              />
            </div>
            <div class="form-group col-md-5 col-sm-12">
              <label for="address">Address</label>
              <input
                type="text"
                name="address"
                id="address"
                placeholder="Address"
                value="<%= user.address %>"
                class="form-control shadow"
              />
            </div>
            <div class="form-group col-md-4 col-sm-12">
              <label for="sexe">Sexe</label>
              <select name="sexe" id="sexe" class="form-control">
                <option></option>
                <option value="M">Masculin</option>
                <option value="F">Feminin</option>
              </select>
            </div>
            <div class="form-group col-md-4 col-sm-12">
              <label for="status">Status</label>
              <select name="status" id="status" class="form-control">
                <option></option>
                <option value="Celibataire">Celibataire</option>
                <option value="Fiance">Fiance</option>
                <option value="Mariee">Mariee</option>
                <option value="Divorce">Divorce</option>
                <option value="Veuf/veuve">Veuf/veuve</option>
              </select>
            </div>
            <div class="form-group col-md-4 col-sm-12">
              <label for="post">POST</label>
              <select name="post" id="post" class="form-control">
                <option></option>
                <option value="Directeur">Directeur</option>
                <option value="Comptable">Comptable</option>
                <option value="Surveillant">Surveillant</option>
                <option value="Ouvrielle">Ouvrielle</option>
              </select>
            </div>
            <div class="col-md-4">
              <label>Sexe</label>
              <span class="badge badge-warning text-white">
                <%= user.sexe %>
              </span>
            </div>
            <div class="col-md-4">
              <label>Status matrimoniale</label>
              <span class="badge badge-warning text-white">
                <%= user.status %>
              </span>
            </div>
            <div class="col-md-4">
              <label>Post</label>
              <span class="badge badge-warning text-white">
                <%= user.post %>
              </span>
            </div>
          </div>

          <div class="form-group">
            <button type="submit" class="btn btn-warning text-white shadow">
              Update <i class="fa fa-database"></i>
            </button>
          </div>
        </form>
        <% }) %>
      </div>
    </div>
  </div>
</div>
<%- include('./includes/footer') %>
